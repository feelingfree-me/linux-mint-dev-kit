    bg[ACTIVE] = "#d64937"
    bg[PRELIGHT] = "#d64937"
    fg[NORMAL] = "#cccccc"
    fg[ACTIVE] = "#ffffff"
    fg[PRELIGHT] = "#ffffff"
}
